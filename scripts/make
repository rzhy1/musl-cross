#!/bin/bash

set -e

TARGET="x86_64-w64-mingw32"

# packages
sudo apt-get update
sudo apt-get install -y --no-install-recommends \
  automake \
  bison \
  bzip2 \
  ca-certificates \
  curl \
  file \
  flex \
  g++ \
  gawk \
  gdb \
  git \
  gperf \
  help2man \
  libncurses-dev \
  libssl-dev \
  libtool-bin \
  make \
  patch \
  pkg-config \
  python3 \
  rsync \
  texinfo \
  unzip \
  wget \
  xz-utils

# patch
pushd builder
for i in ../targets/${TARGET}/*; do
    if [[ $i == *.patch ]]; then
        patch -Np1 -i $i
    fi
done
popd

# crosstool-ng
echo "编译ct-ng版本"
if [ ! -e /usr/bin/ct-ng ]; then
    pushd builder
    ./bootstrap
    ./configure --prefix=/usr
    make -j`nproc`
    sudo make install
    popd
fi

# build
sudo mkdir -p /opt
sudo chmod 0777 /opt
mkdir -p build
cp targets/${TARGET}/config build/.config
echo "查询.config内容1"
cat build/.config
pushd build
ct-ng olddefconfig
echo "当前路径: $(pwd)"
sudo find / -name ".config" -print 2>/dev/null
#sed -i 's/CT_GMP_VERSION="6.2.1"/CT_GMP_VERSION="6.3.0"/' /home/runner/work/musl-cross/musl-cross/build/.config
#sed -i 's/CT_ISL_VERSION="0.26"/CT_ISL_VERSION="0.27"/' /home/runner/work/musl-cross/musl-cross/build/.config
echo "查询.config内容"
cat /home/runner/work/musl-cross/musl-cross/build/.config
ct-ng build
popd

# 删除临时文件
sudo mv /opt/x-tools/${TARGET} .
sudo chown -R root:root ${TARGET}
sudo tar -cJvf ${TARGET}.tar.xz ${TARGET}
sudo sha256sum ${TARGET}.tar.xz | awk '{ print $1 }' > ${TARGET}.tar.xz.sha256
